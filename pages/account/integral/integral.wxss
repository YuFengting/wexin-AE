/* pages/account/integral/integral.wxss */
.integralWrap{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding:20px;
    background:#fff;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.classShowBox .level{
    color:#ffa614;
}
.progress-box{
    margin:20px 0px;
    width:100%;
    position: relative;
}
.classLevel{
    display: flex;
    display: -webkit-flex;
    position: absolute;
    left:0px;
    top:0px;
    width:100%;
}
.classLevel text{
    flex:1;
    -webkit-flex:1;
    text-align: right;
    border-right:1px solid #fff;
    height:6px;
}
.starEndClass{
    color:#ffa614;
    font-size:14px;
    position: absolute;
    top:6px;
}
.starEndClass.start{
    left:0px;
}
.starEndClass.end{
    right:0px;
}
.nextClassNeed{
    color:#999;
    font-size:14px;
    text-align:left;
    width:100%;
    margin-top:5px;
}
.nextClassNeed .num{
    color:#ffa614;
    margin:0 5px;
}
.intergralRight{
    background:#fff;
    padding:20px;
    margin-top:15px;
}
.intergralRight text{
    display: block;
}
.intergralRight .title{
    font-size:14px;
    margin-bottom:10px;
}
.intergralRight .right{
    font-size:13px;
    color:#999;
    text-indent:1em;
    line-height: 20px;
}
.intergralRight .roundbox{
    width:8px;
    height:8px;
    border-radius: 50%;
    background: #ffa614;
}